<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="/css/style.css" />
        <style>
            figure {
                display:inline-block;
                font-size: 10pt;
                text-align: center;
                color:darkviolet;
            }
        </style>
        <script src="/js/jquery.min.js"></script>
        <script>
            $(() => {
                pictureAlbumsIcons();
            });

            function pictureAlbumsIcons() {
                $.getJSON('/getAlbums/picture', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "";
                        for (let a of data) {
                            let image = ""
                            if (a.bindata > 0) {
                                image = "/extract/" + a.bindata;
                            }
                            else {
                                image ="/img/song48.png";
                            }
                            html += `<figure><a href="/pictures/showContent/?album=${a.id}" taregt="_blank"><img src="${image}" /></a><figcaption>${a.name}</figcaption></figure>\n`;
                        }
                        $("#albums").html(html);
                        $("message").text("アルバム一覧が表示されました。");
                    }
                });
            }

            function pictureAlbumsDetail() {
                $.getJSON('/getAlbums/picture', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "<table><tr><th style=\"text-align:center;\">id</th><th>名前</th><th>情報</th><th>イメージ</th><th>グループ</th><th>作成日時</th></tr>";
                        for (let a of data) {
                            let dt = a.date.substring(0, 10);
                            html += `<tr><td style=\"text-align:center;\">${a.id}</td><td><a href="/showAlbumContent/${a.id}" target="_blank">${a.name}</a></td><td>${a.info}</td><td>${a.bindata}</td><td>${a.groupname}</td><td>${dt}</td></tr>\n`;
                        }
                        html += "</table>";
                        $("#albums").html(html);
                        $("#message").text("");
                    }
                });
            }
        </script>
    </head>

    <body>
        <header>
            <h1><%= title %></h1>
            <div class="menu">
                <a href="/index"><img src="/img/home.png" /> HOME</a>&nbsp;|&nbsp;
                <a href="javascript:location.reload()"><img src="/img/refresh2.png" /> 表示更新</a>&nbsp;|&nbsp;
                表示 (<a href="javascript:pictureAlbumsIcons()">アイコン形式</a>&nbsp;/&nbsp;
                <a href="javascript:pictureAlbumsDetail()">詳細形式</a>)&nbsp;|&nbsp;
                <a href="/pictures/showContent" target="_blank">画像フォルダ一覧</a>&nbsp;|&nbsp;
                <a href="/pictures/picturesForm" target="_blank">画像フォルダの追加・修正</a>&nbsp;|&nbsp;
                <a href="/addModifyAlbum?mark=picture" target="_blank">アルバムの作成・修正</a>&nbsp;|&nbsp;
            </div>
        </header>
        <article>
            <br />
            <div id="albums"></div>
            <p class="message" id="message"><%= message %></p>
        </article>
        <footer>
            <p>&nbsp;</p>
            <p class="footer_text"><a href="#top">TOP</a></p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>
        </footer>
    </body>
</html>