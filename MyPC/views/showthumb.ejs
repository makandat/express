        <br />
        <% for (let p of files) { %>
            <a href="/pictures/showNavImage?path=<%= p %>" target="_blank"><img src="/sendfile?path=<%= p %>" class="item" /></a>
        <% } %>       
        <!-- フッター -->
        <p>&nbsp;</p>
        <p style="text-align:center;"><a href="#top">TOP</a></p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
