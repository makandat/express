<!DOCTYPE html>
<html>
    <head>
        <title><%= title %> アルバム一覧</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="/css/style.css" />
        <style>
            #albums {
                margin-top: 30px;
                margin-bottom: 30px;
                margin-left: 4%;
                margin-right: 4%;
            }
            table {
                margin-top: 40px;
                margin-bottom: 30px;
                margin-left: auto;
                margin-right: auto;
                width: 100%;
            }
            textarea {
                width:95%;
                height:100px;
                font-size:10pt;
                padding:3px;
                color:darkslategray;
                border-width:0px;
            }
        </style>
        <script src="/js/jquery.min.js"></script>
        <script>
            $(() => {
                musicAlbumsIcons();
                musicPlaylistsIcons();
            });

            function musicAlbumsIcons() {
                $.getJSON('/getAlbums/music', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "";
                        for (let a of data) {
                            let image = ""
                            if (a.bindata > 0) {
                                image = "/extract/" + a.bindata;
                            }
                            else {
                                image ="/img/music64.png";
                            }
                            html += `<figure style='display:inline-block;'><a href="/music/showContent/?album=${a.id}" taregt="_blank"><img src="${image}" /></a><figcaption style="font-size:10pt;color:darkmagenta;">${a.name}</figcaption></figure>\n`;
                        }
                        $("#albums").html(html);
                        $("message").text("アルバム一覧が表示されました。");
                    }
                });
            }

            function musicAlbumsDetail() {
                $.getJSON('/getAlbums/music', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "<table><tr><th style=\"text-align:center;\">id</th><th>名前</th><th>情報</th><th>イメージ</th><th>グループ</th><th>作成日時</th></tr>";
                        for (let a of data) {
                            let dt = a.date.substring(0, 10);
                            html += `<tr><td style=\"text-align:center;\">${a.id}</td><td><a href="/music/showContent/?album=${a.id}" target="_blank">${a.name}</a></td><td>${a.info}</td><td>${a.bindata}</td><td>${a.groupname}</td><td>${dt}</td></tr>\n`;
                        }
                        html += "</table>";
                        $("#albums").html(html);
                        $("#message").text("");
                    }
                });
            }

            function musicPlaylistsIcons() {
                $.getJSON('/getPlaylists', (data) => {
                    if (! data) {
                        app.message = "プレイリストにデータがありません。";
                    }
                    else {
                        let html = "";
                        for (let a of data) {
                            let image ="/img/playlist64.png";
                            html += `<figure style='display:inline-block;'><a href="/playlist/?list=${a.id}" taregt="_blank"><img src="${image}" /></a><figcaption style="font-size:10pt;color:red">${a.title}</figcaption></figure>\n`;
                        }
                        $("#playlists").html(html);
                        $("message").text("アルバムとプレイリスト一覧が表示されました。");
                    }
                });
            }

            function musicPlaylistsDetail() {
                $.getJSON('/getPlaylists', (data) => {
                    if (! data) {
                        app.message = "プレイリストにデータがありません。";
                    }
                    else {
                        let html = "<table><tr><th style=\"text-align:center;\">id</th><th>タイトル</th><th>曲目</th><th>情報</th><th>作成日時</th></tr>";
                        for (let a of data) {
                            let dt = a.date ? a.date.getFullYear() + "-" + (a.date.getMonth() + 1) + "-" + a.date.getDate() : "";
                            html += `<tr><td style=\"text-align:center;\">${a.id}</td><td><a href="/playlist?list=${a.id}" target="_blank">${a.title}</a></td><td><textarea readonly>${a.items}</textarea></td><td>${a.info}</td><td>${dt}</td></tr>\n`;
                        }
                        html += "</table>";
                        $("#playlists").html(html);
                        $("#message").text("アルバムとプレイリスト一覧が表示されました。");
                    }
                });
            }
    </script>
    </head>

    <body>
        <header>
            <h1><%= title %> アルバム一覧</h1>
            <div class="menu">
                <a href="/index"><img src="/img/home.png" /> HOME</a>&nbsp;|&nbsp;
                <a href="javascript:location.reload()"><img src="/img/refresh2.png" /> 表示更新</a>&nbsp;|&nbsp;
                表示 (<a href="javascript:musicAlbumsIcons();musicPlaylistsIcons();">アイコン形式</a>&nbsp;/&nbsp;
                <a href="javascript:musicAlbumsDetail();musicPlaylistsDetail();">詳細形式</a>)&nbsp;|&nbsp;
                <a href="/music/showContent" target="_blank">音楽一覧</a>&nbsp;|&nbsp;
                <a href="/music/musicForm" target="_blank">音楽の追加・修正</a>&nbsp;|&nbsp;
                <a href="/music/musicPlForm" target="_blank">プレイリストの作成・修正</a>&nbsp;|&nbsp;
                <a href="/addModifyAlbum?mark=music" target="_blank">アルバムの作成・修正</a>&nbsp;|&nbsp;
            </div>
        </header>
        <article id="app">
            <p class="message" id="message"><%= message %></p>
            <h3>アルバム</h3>
            <div id="albums"></div>
            <br />
            <h3>プレイリスト</h3>
            <div id="playlists"></div>
        </article>
        <footer>
            <p>&nbsp;</p>
            <p class="footer_text"><a href="#top">TOP</a></p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>
        </footer>
    </body>
</html>