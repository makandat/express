<!DOCTYPE html>
<html>
    <head>
        <title>動画アルバム一覧</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="/css/style.css" />
        <style>
            figcaption {
                font-size: 10pt;
            }
        </style>
        <script src="/js/jquery.min.js"></script>
        <script>
            function iconView() {
                $.getJSON('/getAlbums/video', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "";
                        for (let a of data) {
                            let image = ""
                            if (a.bindata > 0) {
                                image = "/extract/" + a.bindata;
                            }
                            else {
                                image ="/img/video0.png";
                            }
                            html += `<figure style='display:inline-block;'><a href="/videos/showContent/?album=${a.id}" taregt="_blank"><img src="${image}" /></a><figcaption>${a.name}</figcaption></figure>\n`;
                        }
                        $("#albums").html(html);
                        $("message").text("アルバム一覧が表示されました。");
                    }
                });
            }

            function detailView() {
                $.getJSON('/getAlbums/video', (data) => {
                    if (! data) {
                        app.message = "アルバムにデータがありません。";
                    }
                    else {
                        let html = "<table style='width:100%'><tr><th style=\"text-align:center;\">id</th><th>名前</th><th>情報</th><th>イメージ</th><th>グループ</th><th>作成日時</th></tr>";
                        for (let a of data) {
                            let dt = a.date.substring(0, 10);
                            html += `<tr><td style=\"text-align:center;\">${a.id}</td><td><a href="/videos/showContent/?album=${a.id}" target="_blank">${a.name}</a></td><td>${a.info}</td><td>${a.bindata}</td><td>${a.groupname}</td><td>${dt}</td></tr>\n`;
                        }
                        html += "</table>";
                        $("#albums").html(html);
                        $("#message").text("");
                    }
                });
            }

            // On jQuery loaded.
            $(() => {
                // 初期表示
                iconView();

                // アイコン表示がクリックされたとき
                $("#viewicons").click(() => {
                    iconView();
                });                    
                
                // 詳細表示がクリックされたとき
                $("#viewdetail").click(() =>{
                    detailView();
                });
            });
        </script>
    </head>

    <body>
        <header>
            <h1>動画アルバム一覧</h1>
            <div class="menu">
                <a href="/index"><img src="/img/home.png" /> HOME</a>&nbsp;|&nbsp;
                <a href="javascript:location.reload()"><img src="/img/refresh2.png" /> 表示更新</a>&nbsp;|&nbsp;
                表示 (<a href="#" id="viewicons">アイコン形式</a>&nbsp;/&nbsp;
                <a href="#" id="viewdetail">詳細形式</a>)&nbsp;|&nbsp;
                <a href="/videos/showContent">動画ファイル一覧</a>&nbsp;|&nbsp;
                <a href="/videos/videosForm"><img src="/img/form.png" /> 動画の追加・更新</a>&nbsp;|&nbsp;
                <a href="/videos/albumForm"><img src="/img/form.png" /> アルバムの作成・修正</a>&nbsp;|&nbsp;
            </div>
        </header>
        <article id="app">
            <p class="message"><%= message %></p>
            <div id="albums"></div>
        </article>
        <footer>
            <p>&nbsp;</p>
            <p class="footer_text"><a href="#top">TOP</a></p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>
        </footer>
    </body>
</html>