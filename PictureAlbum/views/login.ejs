<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>LOGIN</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-md5/2.13.0/js/md5.js"></script>
    <style>
        form {
            margin-left:auto;
            margin-right:auto;
            border:solid thin gray;
            background-color:whitesmoke;
            padding:12px;
            width:50%;
            border-radius: 6px 6px;
            box-shadow: 3px 3px 6px;
        }
        input[type="password"] {
            border-radius: 4px;
            padding: 4px;          
        }
        button {
            border-radius: 5px;
            background-color: lime;
            height: 34px;
        }
    </style>
    <script>
        $(() => {
            /* ログインボタン */
            $('#btnLogin').click(() =>{
                let password = md5($("#password").val());
                $('#password').val(password);
                console.log(password);
                $('#form1').submit();
            });

            /* ユーザ管理者ボタン */
            $('#btnAdmin').click(() => {
                let userid = $("#userid").val();
                console.log(userid);
                let password = md5($("#password").val());
                console.log(password);
                location.href = `/users/admin?userid=${userid}&password=${password}`;    
            });

            /* クリア */
            $("#btnClear").click(() => {
                $("input[type='password']").val('');
            });
        });
    </script>
</head>

<body>
  <h1><img src="/img/photo.png" /> 画像アルバム ログイン</h1>
  <br />
  <form id="form1" method="POST" action="/users/login">
    <div class="form-row" style="margin-left:10%;">
        ユーザ ID<br /><input type="text" name="userid" id="userid" size="50" value="<%= userid %>" autofocus />
    </div>
    <div class="form-row" style="margin-left:10%;">
        パスワード<br /><input type="password" name="password" id="password" size="50" value="<%= password %>" />
    </div>
    <div class="form-row" style="margin-left:10%;">
        <br /><button type="button" name="btnLogin" id="btnLogin"><b>ログイン</b></button>&nbsp;
        <input type="button" name="btnAdmin" id="btnAdmin" value=" ユーザ管理 (管理者のみ) " />&nbsp;
        <input type="button" name="btnClear" id="btnClear" value=" パスワードクリア " />
    </div>
    <p class="message"><%= message %></p>
  </form>

</body>
</html>
